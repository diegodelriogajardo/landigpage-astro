---
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="description" content="PrometeoDigital ofrece soluciones web integrales para tu negocio. Descubre nuestros servicios y mejora tu presencia en línea.">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" href="/favicon.svg" type="image/svg+xml">
		<meta name="generator" content="{Astro.generator}">
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<div class="main-container">
			<slot />
		</div>
		<Footer/>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: rgb(2,0,36);
background: -moz-linear-gradient(180deg, rgba(2,0,36,1) 0%, rgba(9,121,9,1) 28%, rgba(9,123,13,1) 63%, rgba(0,255,111,1) 96%);
background: -webkit-linear-gradient(180deg, rgba(2,0,36,1) 0%, rgba(9,121,9,1) 28%, rgba(9,123,13,1) 63%, rgba(0,255,111,1) 96%);
background: linear-gradient(180deg, rgba(2,0,36,1) 0%, rgba(9,121,9,1) 28%, rgba(9,123,13,1) 63%, rgba(0,255,111,1) 96%);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#020024",endColorstr="#00ff6f",GradientType=1);
	}

	.main-container {
		width: 100%;
		height: 100%;
		margin: 300px 0px;
	}
	
</style>
<script>
	   document.addEventListener('DOMContentLoaded', function() {
        // Obtener el header
        var header = document.querySelector('header');
        
        // Obtener todos los enlaces de navegación interna
        var links = document.querySelectorAll('a[href^="#"]');
        
        // Añadir un evento de clic a cada enlace
        links.forEach(function(link) {
            link.addEventListener('click', function(event) {
                // Prevenir el comportamiento predeterminado de la navegación
                event.preventDefault();
                
                // Obtener el objetivo del enlace (la sección a la que se desplaza)
                var targetId = this.getAttribute('href').substring(1);
                var target = document.getElementById(targetId);
                
                if (target) {
                    // Obtener la altura del header
                    var headerHeight = header.offsetHeight;
                    
                    // Calcular el desplazamiento compensado
                    var offset = target.offsetTop - headerHeight;
                    
                    // Desplazarse a la sección con el desplazamiento compensado
                    window.scrollTo({
                        top: offset,
                        behavior: 'smooth'
                    });

                    // Actualizar la URL sin recargar la página
                    history.pushState(null, null, '#' + targetId);
                }
            });
        });
		
    });
</script>