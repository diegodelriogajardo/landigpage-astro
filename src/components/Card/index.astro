---
type Props = {
title:string,
footer:string
}

const {title, footer} = Astro.props

---
<section>
    <header>
        <h2>{title}</h2>
    </header>
    <main>
        <slot/>
    </main>
    <footer>
        <span>{footer}</span>
    </footer>
</section>

<style>
section {
    background-color: rgba(169, 169, 169, 0.1); 
    border-radius: 10px; 
    padding: 20px; 
    margin: 20px; 
    text-align: center; 
    width: 512px;
	max-width: calc(100% - 2rem);
}
main{
    display: flex;
    place-content: center;
    place-items: center;
}

header {
    border-bottom: 1px solid #cccccc5d;; 
    padding-bottom: 10px; 
    margin-bottom: 10px; 
}
h2 {
    margin: 0; 
}

footer {
    border-top: 1px solid #cccccc5d; /* Borde superior */
    padding-top: 10px; /* Espaciado interno superior */
    margin-top: 10px; /* Margen superior */
}
