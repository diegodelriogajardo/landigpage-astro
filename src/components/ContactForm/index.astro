---
<form >
  <div class="input-group">
    <label for="name">Nombre</label>
    <input type="text" id="name" name="name"  placeholder="Juan torres" />
  </div>
  <div class="input-group">
    <label for="email">email</label>
    <input type="email" id="email" name="email"  placeholder="Juan@torres.com" />
  </div>
  <div class="input-group">
    <label for="phone">Teléfono</label>
    <input type="text" id="phone" step="1" name="phone"   placeholder="94576XXXX" />
  </div>
  <div class="input-group">
    <label for="summary">motivo</label>
    <textarea   id="summary" name="summary"   placeholder="les escribo por una pagina de administración de eventos que necesito cotizar  " />
  </div>
  <input type="submit"  class="nav-button" value="contactar" />
</form>

<style>
  form {
    display: flex;
    flex-direction: column;
    place-items: center;
    place-content: center;
    gap:1rem
  }
  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }
  label {
    font-size: 1.5rem;
  }
  input {
      width: 100%;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
        font-size: 1.5rem;
  } 
   #summary {
    padding: 10px;
        margin: 5px 0;
        border: 1px solid #393a3b;
        border-radius: 3px;
        box-sizing: border-box;
      width: 100%;
      height: 200px;
      font-size: 1.5rem;
    }
    .nav-button {
    font-size: x-large;
    text-align: center;
    margin-top: 10px;
    margin-inline: 20px;
    display: inline-block;
    padding: 2px 7px;
    border: 2px solid #393a3b;
    border-radius: 3px;
    background-color:  #393a3b;
    color: white;
    text-decoration: none;
    transition: all 0.3s;
  }

.nav-button:hover {
    background-color: #9e9e9e9d;
    border: 2px solid #9e9e9e9d;
    transform: scale(1.1);
}
</style>
<script is:inline>
  const form =document.querySelector('form');
  form?.addEventListener('click', async (e) => {
  const name = document.querySelector('#name').value
  const email = document.querySelector('#email').value
  const phone = document.querySelector('#phone').value
  const summary = document.querySelector('#summary').value

  const body={
        name,
        email,
        phone,
        summary,
      }

    e.preventDefault();
      const response = await fetch('https://localhost:44351/contact/getform', {
      method: 'POST',
      body:JSON.stringify(body) ,
      headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
      },
    });
    const result = await response.json();
    alert(result);
  });
</script>