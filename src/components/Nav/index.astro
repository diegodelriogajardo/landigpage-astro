---
type Props = {

}

const {} = Astro.props;;;

---
    <nav>
        <a href="/"  class="nav-button">Inicio</a>
        <a href="/contacto"  class="nav-button">Contacto</a>
        <a href="/Sobre-nosotros"  class="nav-button">Sobre nosotros</a>
        <a href="/Valores"  class="nav-button">Valores</a>
    </nav>

<style>
nav {
    display: flex;
    justify-content: center;
    text-align: center;
}

.nav-button {
    font-size: x-large;
    text-align: center;
    margin-top: 10px;
    margin-inline: 20px;
    display: inline-block;
    padding: 2px 7px;
    border: 2px solid #393a3b;
    border-radius: 3px;
    background-color:  #393a3b;
    color: white;
    text-decoration: none;
    transition: all 0.3s;
}

.nav-button:hover {
    background-color: #9e9e9e9d;
    border: 2px solid #9e9e9e9d;
    transform: scale(1.1);
}
 @media screen and (max-width: 768px) {
    /* Estilos para pantallas pequeñas aquí */
        .nav-button {
        margin: 2 3px;
        padding: 2px 4px;
        font-size: 14px;
        border-radius: 3px;
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1023px) {
		/* Estilos para pantallas medianas aquí */
        .nav-button {
        margin: 4 10px;
        padding: 4px 8px;
        font-size: 16px;
        border-radius: 5px;
        }

</style>