}

const {} = Astro.props

---

    <nav>
        <a href="/contacto"  class="nav-button">Contacto</a>
        <a href="/Sobre-nosotros"  class="nav-button">Sobre nosotros</a>
        <a href="/Valores"  class="nav-button">Valores</a>
    </nav>

<style>
nav {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    text-align: center;
}

.nav-button {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 0 10px;
    padding: 10px 20px;
    font-size: 18px;
    background-color: #393a3b;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s;
}

.nav-button:hover {
    background-color: #9e9e9e9d;
}
 @media screen and (max-width: 768px) {
    /* Estilos para pantallas pequeñas aquí */
        .nav-button {
        margin: 2 3px;
        padding: 2px 4px;
        font-size: 14px;
        border-radius: 3px;
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1023px) {
		/* Estilos para pantallas medianas aquí */
        .nav-button {
        margin: 4 10px;
        padding: 4px 8px;
        font-size: 16px;
        border-radius: 5px;
        }

</style>